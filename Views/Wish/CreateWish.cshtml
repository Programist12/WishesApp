@using WishesApp.DTO
@model DtoWish
@{
    ViewData["Title"] = "Create Wish";
    Layout = "_Layout";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <h1 class="text-center mb-4">@ViewData["Title"]</h1>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" type="text" class="form-control" id="name" name="name" placeholder="Enter wish name" required>
                </div>
                <div class="form-group">
                    <label asp-for="Type">Type</label>
                    <input asp-for="Type" type="text" class="form-control" id="type" name="type" placeholder="Enter wish type" required>
                </div>
                <div class="form-group">
                    <label asp-for="Estimate">Estimate</label>
                    <input asp-for="Estimate" type="date" class="form-control" id="estimate" name="estimate" placeholder="Enter wish estimate" required>
                </div>
                <div class="form-group">
                    <label for="user">User Who Create</label>
                    <select asp-for="SelectedUserEmail" class="form-control" id="user" name="SelectedUserEmail" required>
                        @foreach (var user in Model.AvailableUsersForWish)
                        {
                            <option value="@user">@user</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Status">Status</label>
                    <select class="form-control" id="status" name="status" required>
                        <option value="New">New</option>
                        <option value="In Progress">In Progress</option>
                        <option value="Completed">Completed</option>
                    </select>
                </div>
                <div class="form-group" id="stuff-link">
                    <label asp-for="Links">Link</label>
                    <input asp-for="Links" type="text" class="form-control" id="link" name="Links" placeholder="Enter wish links">
                </div>
                <div class="form-group" id="special-desires">
                    <label asp-for="Desires">Desires</label>
                    <textarea asp-for="Desires" class="form-control" id="desires" name="Desires" placeholder="Enter special desires"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Create Wish</button>
            </form>
        </div>
    </div>
</div>
