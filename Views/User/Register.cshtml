@using WishesApp.DTO
@model DtoUser
@{
    ViewData["Title"] = "Register";
}

<div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-primary">Register</h2>
    </div>
    <div class="mb-3">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name">User Name</label>
                <input asp-for="Name" type="text" class="form-control" placeholder="Enter your user name">
            </div>
            <div class="form-group mb-3">
                <label asp-for="SecondName">Second Name</label>
                <input asp-for="SecondName" type="text" class="form-control" placeholder="Enter your second name">
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber">Phone Number</label>
                <input asp-for="PhoneNumber" type="tel" pattern="+380[0-9]-{3}-[0-9]{6}" class="form-control" placeholder="Enter your phone number">
            </div>
            <div class="form-group">
                <label asp-for="About">About</label>
                <input asp-for="About" type="text" class="form-control" placeholder="Tell us about yourself!">
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password">
            </div>

        </form>
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</div>


