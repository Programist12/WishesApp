@using WishesApp.DTO
@model DtoUser
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <h2>Register</h2>
    <form method="post" class="needs-validation" novalidate>
        <div class="form-group">
            <label asp-for="Email">Email:</label>
            <input asp-for="Email" type="email" class="form-control" id="email" name="Email" required>
            <div class="invalid-feedback">
                Please enter a valid email address.
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password:</label>
            <input asp-for="Password" type="password" class="form-control" id="password" name="Password" required>
            <div class="invalid-feedback">
                Please enter a password.
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Password">Confirm Password:</label>
            <input asp-for="Password" type="password" class="form-control" id="confirmPassword" name="ConfirmPassword" required>
            <div class="invalid-feedback">
                Please confirm your password.
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>


